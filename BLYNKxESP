#define BLYNK_TEMPLATE_ID "TMPLxxxxxxx"         // Ganti dengan milikmu
#define BLYNK_TEMPLATE_NAME "Sistem Kebakaran"  // Ganti dengan milikmu
#define BLYNK_AUTH_TOKEN "YourAuthToken"        // Ganti dengan milikmu

#define BLYNK_PRINT Serial
#include <ESP8266WiFi.h>
#include <BlynkSimpleEsp8266.h>
#include <DHT.h>

// DHT config
#define DHTPIN 2           // D4 di NodeMCU
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);

// Flame sensor config
#define FLAME_PIN 4        // D2 di NodeMCU

char ssid[] = "NAMA_WIFI";      // Ganti
char pass[] = "PASSWORD_WIFI";  // Ganti

BlynkTimer timer;

void sendSensorData() {
  float suhu = dht.readTemperature();
  int flame = digitalRead(FLAME_PIN); // LOW = terdeteksi api

  if (isnan(suhu)) {
    Serial.println("Gagal membaca suhu!");
    return;
  }

  Serial.print("Suhu: "); Serial.print(suhu); Serial.println(" C");
  Serial.print("Api: "); Serial.println(flame == LOW ? "TERDETEKSI" : "AMAN");

  // Kirim data ke Blynk
  Blynk.virtualWrite(V0, suhu);
  Blynk.virtualWrite(V1, flame == LOW ? 255 : 0); // LED: ON jika 255

  // Kirim notifikasi jika kondisi bahaya
  if (flame == LOW || suhu > 50) {
    Blynk.logEvent("kebakaran", "⚠️ SUHU TINGGI TERDETEKSI!");
  }
}

void setup() {
  Serial.begin(9600);
  dht.begin();
  pinMode(FLAME_PIN, INPUT);

  Blynk.begin(BLYNK_AUTH_TOKEN, ssid, pass);
  timer.setInterval(2000L, sendSensorData); // Setiap 2 detik
}

void loop() {
  Blynk.run();
  timer.run();
}
